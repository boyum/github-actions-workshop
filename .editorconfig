# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
# One sentence per line for better git diffs
# Wrap prose manually at sentence boundaries
max_line_length = off
trim_trailing_whitespace = true

[*.{js,json,yml,yaml}]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
